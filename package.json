{
	"name": "@davis7dotsh/river-mono",
	"private": true,
	"scripts": {
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"clean": "find . -type d \\( -name \"node_modules\" -o -name \"dist\" -o -name \"build\" -o -name \".turbo\" -o -name \".svelte-kit\" \\) -prune -exec rm -rf {} + 2>/dev/null || true",
		"check-types": "turbo run check-types",
		"build:all": "turbo run build",
		"build:redis": "turbo run --filter=@davis7dotsh/river-provider-redis build "
	},
	"devDependencies": {
		"prettier": "^3.6.2",
		"turbo": "^2.6.0",
		"typescript": "^5.9.3"
	},
	"engines": {
		"node": ">=22"
	},
	"packageManager": "bun@1.3.1",
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
